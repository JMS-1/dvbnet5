  "version": "0.2.0",
  "configurations": [
    {
      "args": [],
      "console": "internalConsole",
      "cwd": "${workspaceFolder}",
      "name": "Tests",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/TestApp/bin/Debug/net8.0/TestApp.dll",
      "request": "launch",
      "stopAtEntry": false,
      "type": "coreclr"
    },
    {
      "name": "Server",
      "processName": "JMS.VCR.NET",
      "request": "attach",
      "type": "coreclr"
    },
    {
      "args": [],
      "cwd": "${workspaceFolder}/WebServer",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "name": "Startup",
      "preLaunchTask": "build-server",
      "program": "${workspaceFolder}/WebServer/bin/Debug/net8.0/JMS.VCR.NET.dll",
      "request": "launch",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/swagger"
      },
      "stopAtEntry": false,
      "type": "coreclr"
    }
  ]
}
